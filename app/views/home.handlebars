<!-- Page Content -->
<div class="main">
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top ">
        <div class="container">
            <img src="" alt="HarkUp">
            <div id="user_div" class="nav-item"></div>
            <div id="login_div" class="nav-item">
                <ul class="form-inline">

                    <!-- Modal Trigger Buttons -->
                    <button type="button" id="login-btn" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#login-modal">Log In</button>
                    <br>
                    <p class="or"> OR </p>
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#signup" id="signup-btn">Sign Up</button>
                </ul>
            </div>
        </div>
    </nav>
    <!-- END NAVBAR -->

    <div class="jumbotron mt-4 bg-secondary text-center text-dark">
        <h1 class="display-4">HarkUp, Your Text-To-Speech Companion</h1>
        <p class="lead">Focus on the journey while you learn on the go.</p>
        <hr class="my-4">
        <p>Just paste your url in the space below and be free from distraction.</p>
    </div>

    <!-- URL BAR HERE -->
    <div class="container">

        <form method="POST" action="/article">
            <div class="input-group input-group-lg">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-lg">URL here:</span>
                </div>
                <input name="url" type="text" class="form-control" aria-label="Large" aria-describedby="inputGroup-sizing-sm">
                <input class="btn btn-primary" type="submit" id="submit" value="Submit">
            </div>
        </form>
    </div>
    <!-- END URL BAR -->

    <!-- FONTAWESOME ICONS -->
    <div class="container fa-5x text-center">
        <div class="row ">
            <div class="col-lg my-auto">
                <div class=" mx-auto">
                    <i class="fab fa-twitter "></i>
                    <i class="fab fa-github"></i>
                    <i class="fab fa-facebook-square"></i>
                </div>
            </div>
        </div>
    </div>
    <!-- END FONTAWESOME ICONS -->


    <!-- FOOTER -->
    <div class="row py-3">
        <div class="col-md-7"> </div>
        <div class="col-md text-md-right">
            <small>&copy; SMU Coding Camp </small>
        </div>
    </div>
    <!-- END FOOTER -->


    <div class="modal fade text-dark" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-title" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <!-- Modal Header -->
                <div class="modal-header">
                    <h5 class="modal-title" id="login-title">Log In</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <!-- Modal Body -->
                <div id="login-modal-body" class="modal-body">
                    <!-- inputting form-->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save Changes</button>
                </div>

            </div>

        </div>
    </div>

    <!-- END MODAL - SIGN IN - this goes inside the SIGN IN  -->

    <!--MODAL - SIGN UP-->

    <div class="modal fade text-dark" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="signup form" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Sign Up</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- inputting form-->
                    <div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="email_sign" aria-describedby="emailHelp" placeholder="Enter email">
                            <small id="emailSignHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" id="password_sign" placeholder="Password">
                        </div>
                        <button onclick="signUp()" type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                </div>

            </div>
        </div>
    </div>


</div>